<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="https://jakarta.ee/xml/ns/jakartaee" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd" id="WebApp_ID" version="6.0">
 
	<display-name>nol2425</display-name>
 
	<welcome-file-list>
    	<welcome-file>index.html</welcome-file>
  	</welcome-file-list>

<!--Servlets-->
	<!--Login-->
	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>com.ejemplo.servlets.LoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>

	<!--Dashboard Alumno-->
	<servlet>
		<servlet-name>AlumnoDashboardServlet</servlet-name>
		<servlet-class>com.ejemplo.servlets.AlumnoDashboardServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AlumnoDashboardServlet</servlet-name>
		<url-pattern>/alumno_dashboard</url-pattern>
	</servlet-mapping>

	<!--Dashboard Profesor-->
	<servlet>
		<servlet-name>ProfesorDashboardServlet</servlet-name>
		<servlet-class>com.ejemplo.servlets.ProfesorDashboardServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ProfesorDashboardServlet</servlet-name>
		<url-pattern>/profesor_dashboard</url-pattern>
	</servlet-mapping>

	<!--Filtro de Logs-->
	<filter>
		<filter-name>LogFilter</filter-name>
		<filter-class>com.ejemplo.filters.LogFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>LogFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
</web-app>